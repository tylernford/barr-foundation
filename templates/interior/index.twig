{# ===========================================================
Template: interior/index.twig
URL: /
===========================================================
Interior template
=========================================================== #}

{% extends '_layouts/_base' %}

{% import '_macros/02_components/_assets' as assets %}
{% import '_macros/03_modules/_opener' as openers %}

{% block content %}

{# INTERIOR OPENER #}
{% if entry.section.handle in ['aboutUs', 'grantmaking', 'newsInsights', 'programAreas'] %}
    {% set opener = entry.openerLanding %}
    {{ openers.landing(opener, entry) }}
{% elseif entry.section.handle == 'directory' %}
    {{ openers.bio(entry) }}
{% endif %}

{# INTERIOR BUILDER: #}
{# 1. People is a unique builder 
   2. Grants Database is builder-less
   3. Default to common builder for everything else
#}
{% set builder = entry.slug == 'people' ? entry.builderPeople : (entry.slug == 'grants-grantees' ? null : entry.builderCommon ) %}

{% if builder %}
    {% include '_partials/_builder-common.twig' with {'builder': builder} %}
{% else %}
    {# Grants DB dynamic render #}
{% endif %}

{% endblock %}