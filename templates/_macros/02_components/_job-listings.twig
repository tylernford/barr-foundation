            </div>

            <div class="listing__secondary">
                <div class="listing__details">
                    {{ details.detail('job-title', false, 'Full Time') }}
                    {{ details.detail('location', false, 'Boston, MA', 'globe') }}
                </div>

                <div class="listing__action">
                    {% set actionAttributes = {
                        type: 'button', isReversed: false,
