{# _macros/02_components/_featured_posts_carousel.twig #}
{% macro carousel() %}
    {% import '_macros/02_components/_card' as cards %}

    {% set featuredItems = craft.entries().section('blog').featured(true) %}

    {% for featuredItem in featuredItems %}
        {% set card = featuredItem %}
        {{ cards.post(card, 'large') }}
    {% endfor %}
{% endmacro %}