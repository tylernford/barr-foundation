{# _macros/02_components/_featured_posts_carousel.twig #}
{% macro carousel(type) %}
    {% import '_macros/02_components/_card' as cards %}

    {% set featuredItems = craft.entries().section(type).featured(true) %}

    {% for featuredItem in featuredItems %}
        {% set card = featuredItem %}

        {% if type == 'blog' %}
            {{ cards.post(card, 'large') }}
        {% elseif type == 'grantees' %}
            {% set granteeCardConfig = {
                'grantee': featuredItem,
                'variant': 'large',
                'label': 'Featured Grantee'
            } %}
            {{ cards.grantee(granteeCardConfig) }}
        {% endif %}
    {% endfor %}
{% endmacro %}